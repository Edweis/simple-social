{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb", "prettier", "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "quotes": ["error", "single"],
      "prettier/prettier": [ "error", { "singleQuote": true, "trailingComma": "all" } ],
      "curly": ["error", "multi-or-nest"],
      "react/jsx-one-expression-per-line": "off"
    }
}
