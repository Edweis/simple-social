{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base", "prettier", "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "quotes": ["error", "single"],
        "prettier/prettier": [ "error", { "singleQuote": true, "trailingComma": "all" } ],
        "import/prefer-default-export": "off",
        "curly": ["error", "multi-or-nest"]
    }
}
